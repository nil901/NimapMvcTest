</body>
</html>

<script type="text/javascript">


    function get_data_for_update() {


        var table = document.getElementById('example1234');

        $('#example1234 tbody').on('click', 'td', function () {

            var row_num = parseInt($(this).parent().index());
            var firstCell = table.rows[row_num].cells[0].innerHTML;
            location.href = '@Url.Action("Category_update", "Home")?user_id=' + firstCell;

        });

    }

</script>

